<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tab" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/lic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/startdate"
            android:layout_below="@+id/startdate"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Height (cms)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/school"
            android:layout_below="@+id/school"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="List of allergies/permanant illness ( if any )"
            android:inputType="textMultiLine" >
        </EditText>

        <TextView
            android:id="@+id/pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pic"
            android:layout_alignLeft="@+id/button1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="26dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spec"
            android:layout_below="@+id/spec"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Weight (kgs)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lic"
            android:layout_below="@+id/lic"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Blood Group" />

        <EditText
            android:id="@+id/spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email"
            android:layout_below="@+id/email"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Nationality" >
        </EditText>

        <ImageView
            android:id="@+id/pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/process1" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Father/Spouse&apos;s Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/degree"
            android:layout_centerHorizontal="true"
            android:background="@drawable/next_button"
            android:text="" />

    </RelativeLayout>

</ScrollView>
