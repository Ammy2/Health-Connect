<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
       android:background="@drawable/back1"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="474dp" >

    <TextView
        android:id="@+id/doc_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pbg"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="123dp"
        android:text="" />

    <TextView
        android:id="@+id/pwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pnation"
        android:layout_alignRight="@+id/pnation"
        android:layout_below="@+id/pnation"
        android:layout_marginTop="20dp"
        android:text="ht" />

    <TextView
        android:id="@+id/pht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pwt"
        android:layout_alignRight="@+id/pwt"
        android:layout_below="@+id/pwt"
        android:layout_marginTop="14dp"
        android:text="wt" />

    <TextView
        android:id="@+id/docadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pht"
        android:layout_alignRight="@+id/pht"
        android:layout_below="@+id/pht"
        android:layout_marginTop="18dp"
        android:text="address" />

    <TextView
        android:id="@+id/pdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/docadd"
        android:layout_alignRight="@+id/docadd"
        android:layout_below="@+id/docadd"
        android:layout_marginTop="16dp"
        android:text="dob" />

    <TextView
        android:id="@+id/pemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pdob"
        android:layout_alignRight="@+id/pdob"
        android:layout_below="@+id/pdob"
        android:layout_marginTop="14dp"
        android:text="email" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pemail"
        android:layout_toLeftOf="@+id/textView5"
        android:text="" />

    <TextView
        android:id="@+id/pbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pname"
        android:layout_below="@+id/pname"
        android:layout_marginTop="16dp"
        android:text="bg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pnation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/filesopen"
        android:layout_toRightOf="@+id/cht"
        android:text="View Reports" />

    <Button
        android:id="@+id/cht"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pname"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView5"
        android:drawableLeft="@drawable/chat_icon"
        android:text="Chat" />

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/doc_degree"
        android:layout_alignTop="@+id/pname"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/textView5"
        android:text="pda" />

    <TextView
        android:id="@+id/pnation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic3"
        android:layout_toLeftOf="@+id/pbg"
        android:text="nation" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="43dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
</RelativeLayout>
</ScrollView>