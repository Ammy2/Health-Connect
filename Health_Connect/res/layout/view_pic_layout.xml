<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
       android:background="@drawable/back1"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="474dp" >

    <TextView
        android:id="@+id/doc_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pbg"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="123dp"
        android:text="" />

    <TextView
        android:id="@+id/pwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pnation"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/pnation"
        android:layout_marginTop="20dp"
        android:text="school" />

    <TextView
        android:id="@+id/pht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pwt"
        android:layout_below="@+id/pwt"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/textView8"
        android:text="license" />

    <TextView
        android:id="@+id/docadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pht"
        android:layout_below="@+id/pht"
        android:layout_marginTop="18dp"
        android:text="address" />

    <TextView
        android:id="@+id/pdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/docadd"
        android:layout_below="@+id/docadd"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/textView8"
        android:text="start date" />

    <TextView
        android:id="@+id/pemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pdob"
        android:layout_alignRight="@+id/pdob"
        android:layout_below="@+id/pdob"
        android:layout_marginTop="14dp"
        android:text="email" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pemail"
        android:layout_toLeftOf="@+id/textView5"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pnation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/add_doc"
        android:layout_alignRight="@+id/textView5"
        android:text="Add" />

    <Button
        android:id="@+id/cht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pname"
        android:drawableLeft="@drawable/chat_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Chat" />

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/pname"
        android:layout_toRightOf="@+id/doc_degree"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/pbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pic3"
        android:layout_alignLeft="@+id/pname"
        android:text="spec"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cht"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/textView8"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/pnation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pic3"
        android:layout_below="@+id/pic3"
        android:layout_marginTop="25dp"
        android:text="degree" />
 
</RelativeLayout>
</ScrollView>